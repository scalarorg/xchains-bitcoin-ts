{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "types": ["bun-types"]
  },
  "include": ["src/**/*.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
